<div class="w-full max-w-[480px] mx-auto">
    <h1 class="text-2xl font-medium text-blue-500 mb-4">Order summary</h1>
    <div class="mb-6 border-b pb-6">
        <div class="text-xl mb-4"><%= @order.product.name %></div>
        <div class="text-base text-gray-400 "><%= @order.product.description %></div>
    </div>
    <div class="mt-8 flex justify-between items-center text-gray-400">
        <div>Product price :</div>
         <%= @order.product.price %>
    </div>
    <div class="mt-8 flex justify-between items-center text-gray-400">
        <div>Amount :</div>
        <%= @order.amount %>
    </div>
    <div class="mt-8 flex justify-between items-cente">
        <div>Total price : </div>
        <%= @order.total_price %>
    </div>
    <div class="mt-10 flex justify-left items-center">
        <div class="max-w-max underline">
            <%= link_to "Back", products_path %>
        </div>
    </div>
    
</div>