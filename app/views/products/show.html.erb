<div class="w-full max-w-[480px] mx-auto">
  <div>
    <%= render @product %>
  </div>

  <div class="mt-8 flex justify-between items-center">
    <div class="max-w-max underline">
        <%= link_to "Back", products_path %>
    </div>
    <div class="flex max-w-max ">
      <%= button_to "Delete", product_path(@product), method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "text-red-500" %>
    </div>
  </div>
</div>